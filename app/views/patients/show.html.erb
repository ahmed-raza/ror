<h1>Patients#show</h1>
<p>Find me in app/views/patients/show.html.erb</p>
<h2><%= @patient.name %></h2>

<% if @patient.appointments.exists? %>
  <p>Appointment with following doctors;</p>
  <table border="1">
    <tr>
      <th>#id</th>
      <th>Doctor Name</th>
      <th>Date</th>
    </tr>
    <% @patient.appointments.each do |appointment| %>
    <tr>
      <td><%= appointment.doctor.id %></td>
      <td><%= appointment.doctor.name %></td>
      <td><%= appointment.appointment_date %></td>
    </tr>
    <% end %>
  </table>
<% else %>
<p>This patient has no appointments for now.</p>
<% end %>
