<h1>Listing articles</h1>
  <p><%= link_to "Add new Blog", new_article_path %></p>
<% @articles.each do |article| %>
  <h2><%= link_to article.title, article %></h2>
  <p><%= truncate(article.content, length: 50) %></p>
  <p><%= link_to "Edit", edit_article_path(article) %> | <%= link_to "Delete", article, :confirm => 'Are you sure?', :method => :delete %></p>
  <hr>
<% end %>
