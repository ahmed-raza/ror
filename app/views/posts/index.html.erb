<h1>Our Blog</h1>
  <p><%= link_to "Add new Blog", new_post_path %></p>
  <%= test_helper_ahmed("First", "Last") %>
<% @posts.each do |post| %>
  <%= edit_post_url(post.id) %>
  <h2><%= link_to post.title, post %></h2>
  <p><%= post.content %></p>
  <p><%= link_to "Edit", edit_post_path(post) %> | <%= link_to "Delete", post, :confirm => 'Are you sure?', :method => :delete %></p>
  <hr>
<% end %>
