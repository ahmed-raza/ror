<h1>Add a new Post</h1>

<%= form_for @post do |f| %>
  <% if @post.errors.any? %>
    <div class="alert alert-danger">
      <a class="close" href="#" data-dismiss="alert">x</a>
      <h4 class="alert-heading">Uh oh!</h4>
      <ul>
        <% @post.errors.full_messages.each do |error| %>
          <li><%= error %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <p><%= f.label :title %></p>
  <p><%= f.text_field :title, class: "form-control" %></p>
  <p><%= f.label :content %></p>
  <p><%= f.text_area :content, class: "form-control" %></p>
  <p><%= f.submit "Add a new post", class: "btn btn-success" %></p>
<% end %>
